# CryptoSignal Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Security - Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# OpenAI API Key for AI analysis
OPENAI_API_KEY=sk-your-openai-api-key

# Database path
DB_PATH=/opt/cryptosignal-app/backend/cryptosignal.db

# =============================================================================
# REDIS
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# TELEGRAM (Optional)
# =============================================================================

# User notification bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Admin notification bot
TELEGRAM_ADMIN_BOT_TOKEN=your-admin-bot-token
ADMIN_CHAT_ID=your-admin-chat-id

# =============================================================================
# PAYMENT (Optional)
# =============================================================================

STRIPE_SECRET_KEY=sk_test_your-stripe-key
